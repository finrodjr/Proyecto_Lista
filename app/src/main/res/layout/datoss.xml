<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/paper">

    <TextView

        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/verdeAmarillo"
        android:text="Verificar Datos"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"

        >

    </TextView>

    <TextView
        android:id="@+id/textViewFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Titulo"
        android:text="Nombre completo:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/textViewDateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de nacimiento:"
        android:textStyle="bold"
        android:layout_below="@id/textViewFullName"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono:"
        android:textStyle="bold"
        android:layout_below="@id/textViewDateOfBirth"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textStyle="bold"
        android:layout_below="@id/textViewPhone"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción del contacto:"
        android:textStyle="bold"
        android:layout_below="@id/textViewEmail"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:textColor="@color/red"/>

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_below="@id/textViewDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/dark_brown"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonEdit"
        android:src="@drawable/foto"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
        />
</RelativeLayout>
